FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultFieldValues
(
    volScalarFieldValue alpha.liquid    0
    volScalarFieldValue alpha.gas       1
);

regions
(
    boxToCell
    {
        // box (0 0 0) (1 0.08 1);
        box (0 0 0) (1 0.12 1);
        fieldValues
        (
            volScalarFieldValue alpha.liquid 1
            volScalarFieldValue alpha.gas    0
            volScalarFieldValue T            360 // 365
        );
    }

    sphereToCell
    {
        centre (0.02 0.02 0.0001);
        radius 0.005;
        fieldValues
        (
            volScalarFieldValue alpha.liquid 0
            volScalarFieldValue alpha.gas    1
            volScalarFieldValue T            360
        );
    }
);


// ************************************************************************* //
