FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      p_rgh;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// dimensions      [1 -1 -2 0 0 0 0]; // for compressible
dimensions      [0 2 -2 0 0 0 0];  // for incompressible

internalField   uniform 1e5; 

boundaryField
{
    west
    {
        type            fixedFluxPressure;
        gradient        uniform 0; 
        value           $internalField; 
    }
    east
    {
        type            fixedFluxPressure;
        gradient        uniform 0; 
        value           $internalField;
    }
    top
    {
        type            fixedValue;
        value           $internalField;
        // value           uniform 101325;
    }
    ground
    {
        type            fixedFluxPressure;
        gradient        uniform 0;
        value           $internalField;
    }
    north
    {
        type            fixedFluxPressure;
        gradient        uniform 0; 
        value           $internalField;
    }
    south
    {
        type            fixedFluxPressure;
        gradient        uniform 0; 
        value           $internalField;
    }
    buildings
    {
        type            fixedFluxPressure;
        gradient        uniform 0; 
        value           $internalField;
    }

    // west
    // {
    //     type            fixedFluxPressure;
    //     gradient        uniform 0; 
