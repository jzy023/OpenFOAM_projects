FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver		    GAMG;
        smoother        GaussSeidel;
        tolerance       1e-08;
        relTol          1e-04;
    }
    pFinal
    {
	    $p;
    }

    "(U|k|epsilon|omega)"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-08;
        relTol          1e-04;
	    nSweeps		    1;
    }
    "(U|k|epsilon|omega)Final"
    {
	    $U;	
    }
}

PIMPLE
{
    nNonOrthogonalCorrectors    0;
    correctPhi                  yes;
    nOuterCorrectors            2;
    nCorrectors                 1;
}

SIMPLE
{
    nNonOrthogonalCorrectors    0;
    consistent		            yes;
    pRefCell		            0;
    pRefValue		            0;
}

relaxationFactors
{
    equations
    {
        // "(U|k|epsilon|omega)"    0.95;
        // ".*"            0.95;

        U               0.9;
        k               0.7;
        omega           0.7;
    }
}

