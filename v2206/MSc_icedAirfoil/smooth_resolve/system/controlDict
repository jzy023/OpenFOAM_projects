FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// application     simpleFoam;

// startFrom       startTime;

// startTime       0;

// stopAt          endTime;

// endTime         4000;

// deltaT          10;

// writeControl    adjustable;

// writeInterval   100;

// purgeWrite      0;

