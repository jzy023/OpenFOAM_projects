FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (15 0 0);

boundaryField
{
    airfoil
    {
        type            noSlip; 
    }
    west
    {
        type            fixedValue;
        value           $internalField;
    }
    east
    {
	type            inletOutlet;
        inletValue      $internalField;
        value           $internalField;
    }
    north
    {
        type            slip;
    }
    south
    {
        type            slip;
    }
    front
    {
        type            empty;
    }
    back
    {
        type            empty;
    }
}

// ************************************************************************* //
