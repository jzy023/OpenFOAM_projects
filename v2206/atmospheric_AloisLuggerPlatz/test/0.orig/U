FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (3 0 0);

boundaryField
{
    inlet
    {
        type                    fixedProfile;
        profile                 csvFile; // table;
        profileCoeffs
        {
            file                "0/uInletProfile.csv";
            format              csv;
            nHeaderLine         1;
            refColumn           3;
            componentColumns    (2 1 0);
            separator           ",";
            mergeSeparators     no;
            outOfBounds         clamp;
            interpolationScheme linear;
        }
        direction               (0 1 0);
        origin                  0;
    }

    outlet
    {
        type            zeroGradient;
    }

    upperAtm
    {
        type            inletOutlet;
        value           $internalField;
        inletValue      uniform (3.53 0 0);
    }

    ground
    {
        type            noSlip;
    }

    frontAtm
    {
        // type            cyclic;
        type            zeroGradient;
    }

    backAtm
    {
        // type            cyclic;
        type            zeroGradient;
    }

    buildings
    {
        type            noSlip;
    }
}


