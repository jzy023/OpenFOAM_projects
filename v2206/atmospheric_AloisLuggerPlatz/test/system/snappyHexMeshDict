FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      snappyHexMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#includeEtc "caseDicts/mesh/generation/snappyHexMeshDict.cfg"

castellatedMesh on;
snap            on;
addLayers       on;

geometry
{
    buildings
    {
        type triSurfaceMesh;
        file "simplified.obj";
    }

    refinementBox
    {
        type searchableBox;
        min  (-250   0  -220);
        max  ( 100  70   150);
    }
};

castellatedMeshControls
{
    minRefinementCells 0;
    nCellsBetweenLevels 1;//2;
    features
    (
       { file  "simplified.eMesh"; level 3; }
    );

    refinementSurfaces
    {
        buildings
        {
            level (3 3);
            patchInfo { type wall; }
        }
    }

    refinementRegions
    {
        refinementBox
        {
            mode inside;
            levels ((1E15 2));
        }
        buildings
        {
            mode distance;
            levels ((2.0 4));  
        }
    }

    locationInMesh (1 1 1);

    resolveFeatureAngle 10;
    allowFreeStandingZoneFaces true;
}

snapControls
{
    nSmoothPatch 3;
    tolerance 1.0;
    nSolveIter 80;
    nRelaxIter 8;

    nFeatureSnapIter 20;

    explicitFeatureSnap    true;
    implicitFeatureSnap    false;
}

addLayersControls
{
    layers
    {
        // buildings
        // {
        //     nSurfaceLayers 3;//1;
        // }
    }

    relativeSizes       false;
    expansionRatio      1.2;
    firstLayerThickness 0.5;
    minThickness        1e-3;
    
    nGrow 0;
    featureAngle 15;//60;
    slipFeatureAngle 30;
    nRelaxIter 8;
    nSmoothSurfaceNormals 1;
    nSmoothNormals 3;
    nSmoothThickness 10;
    maxFaceThicknessRatio 0.5;
    maxThicknessToMedialRatio 0.3;
    minMedianAxisAngle 90;
    nBufferCellsNoExtrude 0;
    nLayerIter 10;
}

meshQualityControls
{}

writeFlags
(
    noRefinement
    scalarLevels
    layerSets
    layerFields
);

mergeTolerance 1e-6;

