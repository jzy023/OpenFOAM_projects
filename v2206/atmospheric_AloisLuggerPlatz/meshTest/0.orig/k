FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      k;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform 0.1;

boundaryField
{
    #include            "include/ABLConditions"

    inlet
    {
        type            fixedValue;
        value           $internalField;
    }

    outlet
    {
        type            zeroGradient;
    }

    upperAtm
    {
        type            zeroGradient;
    }

    "(ground|ground_platz|ground_streets)"
    {
        type            kqRWallFunction;
        value           uniform 0.14;
    }

    frontAtm
    {
        // type            cyclic;
        type            zeroGradient;
    }

    backAtm
    {
        // type            cyclic;
        type            zeroGradient;
    }

    buildings
    {
        type            kqRWallFunction;
        value           uniform 0.14;
    }

    "(walls_top|walls_ground|walls_east|walls_west|walls_north|walls_south)"
    {
        type            kqRWallFunction;
        value           uniform 0.05;
    }
}


