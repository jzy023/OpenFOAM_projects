FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultFieldValues
(
    volScalarFieldValue alpha.liquid   1.0
    volScalarFieldValue alpha.gas      0.0
);

regions
(
    boxToCell
    {
        box (0 -0.04 0) (1 0.00 1);
        fieldValues
        (
            volScalarFieldValue alpha.liquid    0.0
            volScalarFieldValue alpha.gas       1.0  
        );
    }

    sphereToCell
    {
        centre (0.02 -0.14 0.0001);
        radius 0.003;
        fieldValues
        (
            volScalarFieldValue alpha.liquid    0.0
            volScalarFieldValue alpha.gas       1.0
            // volScalarFieldValue T               298.15
        );
    }
);


// ************************************************************************* //
